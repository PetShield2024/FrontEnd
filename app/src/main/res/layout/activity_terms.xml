<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <ImageView
        android:id="@+id/terms_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/terms_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서비스 이용 동의"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_back_iv"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>

    <CheckBox
        android:id="@+id/terms_all_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_title_tv"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>


    <TextView
        android:id="@+id/terms_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="약관 전체 동의"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/terms_all_cb"
        app:layout_constraintStart_toEndOf="@+id/terms_all_cb"/>

    <ImageView
        android:id="@+id/terms_spilt_bar_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/split_bar"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"
        app:layout_constraintTop_toBottomOf="@+id/terms_all_cb" />



    <CheckBox
        android:id="@+id/terms_01_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_spilt_bar_iv"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>


    <TextView
        android:id="@+id/terms_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(만) 14세 이상입니다."
        android:layout_marginStart="7dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/terms_01_cb"
        app:layout_constraintStart_toEndOf="@+id/terms_01_cb"/>

    <CheckBox
        android:id="@+id/terms_02_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_01_cb"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>


    <TextView
        android:id="@+id/terms_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 서비스 이용약관"
        android:layout_marginStart="7dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@+id/terms_02_cb"
        app:layout_constraintStart_toEndOf="@+id/terms_02_cb"/>

    <ImageView
        android:id="@+id/terms_02_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_more"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/terms_02_cb"/>

    <CheckBox
        android:id="@+id/terms_03_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_02_cb"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>


    <TextView
        android:id="@+id/terms_03_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(필수) 개인 정보 처리 방침"
        android:layout_marginStart="7dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/terms_03_cb"
        app:layout_constraintStart_toEndOf="@+id/terms_03_cb"/>

    <ImageView
        android:id="@+id/terms_03_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_more"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/terms_03_cb"/>

    <CheckBox
        android:id="@+id/terms_04_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_03_cb"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>


    <TextView
        android:id="@+id/terms_04_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택) 위치 정보 제공"
        android:layout_marginStart="7dp"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/terms_04_cb"
        app:layout_constraintStart_toEndOf="@+id/terms_04_cb"/>

    <ImageView
        android:id="@+id/terms_04_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_more"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/terms_04_cb"/>

    <CheckBox
        android:id="@+id/terms_05_cb"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:button="@null"
        android:background="@drawable/custom_checkbox"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@+id/terms_04_cb"
        app:layout_constraintStart_toStartOf="@+id/terms_back_iv"/>


    <TextView
        android:id="@+id/terms_05_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(선택) 마케팅 수신 동의"
        android:textColor="#000000"
        android:layout_marginStart="7dp"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/terms_05_cb"
        app:layout_constraintStart_toEndOf="@+id/terms_05_cb"/>

    <ImageView
        android:id="@+id/terms_05_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_more"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/terms_05_cb"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        style="@style/SquareButton"
        android:text="확인"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
